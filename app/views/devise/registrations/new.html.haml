%h2 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  .inputs
    = f.input :first_name, :required => true, :autofocus => true
    = f.input :last_name, :required => true
    = f.input :email, :required => true
    = f.input :password, :required => true
    = f.input :password_confirmation, :required => true
    = f.input :birthday, :as => :date, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12, :discard_day => true, :order => [:month, :year], :required => true
    = f.input :genre, :collection => User::GENRE, :as => :radio, :required => true
    = f.input :interested, :collection => User::GENRE, :as => :radio, :required => true
    = f.input :country, :priority => [ "United States" ], :required => true
    = f.input :state, :required => true
    = f.input :city, :required => true
    = f.input :terms, :as => :check_boxes, :required => true
  .actions
    = f.button :submit, "Sign up"
= render :partial => "devise/shared/links"